<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iuce.diaryandroidproject2.AddDiaryActivity" >

    <Button
        android:id="@+id/btnOpenGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_gallery_open" />

    <Button
        android:id="@+id/btnOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnOpenGallery"
        android:layout_alignBottom="@+id/btnOpenGallery"
        android:layout_toRightOf="@+id/btnOpenGallery"
        android:text="@string/btn_camera_open" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnOpenCamera"
        android:layout_marginTop="156dp" />

    <TextView
        android:id="@+id/txtDetailHoroscopeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/btnOpenCamera"
        android:text="TextView" />

    <Button
        android:id="@+id/btnSpeectToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnOpenCamera"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/btnOpenCamera"
        android:text="@string/btn_speecth_text" />

    <Button
        android:id="@+id/btnRecordVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSpeectToText"
        android:layout_alignRight="@+id/btnSpeectToText"
        android:text="@string/btn_record_voice" />

</RelativeLayout>