<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_closed_book"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iuce.diaryandroidproject2.LoginActivity" >

    <ImageView
        android:id="@+id/imgViewIconHoroscope"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="88dp"
        android:src="@drawable/ic_locked_diary" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/edttxtPincode"
        android:layout_alignRight="@+id/imgViewIconHoroscope"
        android:layout_below="@+id/edttxtPincode"
        android:layout_marginTop="19dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/btnLogin" />

    <EditText
        android:id="@+id/edttxtPincode"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgViewIconHoroscope"
        android:layout_below="@+id/imgViewIconHoroscope"
        android:layout_marginTop="14dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txtPincode"
        android:inputType="textPassword" />

</RelativeLayout>